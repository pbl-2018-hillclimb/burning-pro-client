<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImprudentTweetActivity">

    <LinearLayout
        android:id="@+id/ImprudentTweetArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/goToTwitter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tweet"
        android:text="Tweet!"
        app:layout_constraintBottom_toBottomOf="@id/goToTwitterApp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImprudentTweetArea" />

    <Button
        android:id="@+id/goToTwitterApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tweetByApp"
        android:text="TweetByApp!"
        app:layout_constraintBottom_toBottomOf="@id/goToTwitterAnyApp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goToTwitter" />

    <Button
        android:id="@+id/goToTwitterAnyApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tweetByAnyApp"
        android:text="TweetByAnyApp!"
        app:layout_constraintBottom_toBottomOf="@id/generateTest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goToTwitterApp" />

    <Button
        android:id="@+id/generateTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="generateTest"
        android:text="generate_Test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/goToTwitterAnyApp" />

    <TextView
        android:id="@+id/ImprudenceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/generateTest" />

</android.support.constraint.ConstraintLayout>
